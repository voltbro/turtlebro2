<launch>
  <node pkg="usb_cam" exec="usb_cam_node_exe" name="camera" respawn="true" respawn_delay="15">
    <param name="video_device" value="/dev/video0"/>
    <param name="framerate" value="5.0"/>
    <param name="io_method" value="mmap"/>    
    <param name="frame_id" value="front_camera"/>
    <!--param name="pixel_format" value="mjpeg2rgb"/-->   
    <!--param name="av_device_format" value="YUV422P"/-->   

    <!--param name="image_width" value="1280"/-->   
    <!--param name="image_height" value="720"/-->   

    <!--param name="pixel_format" value="yuyv"/-->   
    <param name="pixel_format" value="yuyv2rgb"/>
    <param name="image_width" value="640"/>   
    <param name="image_height" value="480"/>   

    <param name="camera_name" value="global_shutter_640"/>   
    <param name="camera_info_url" value="file://$(find-pkg-share turtlebro)/camera/global_shutter_640.yaml"/>   


    <remap from="/camera_info" to="/front_camera/camera_info"/>
    <remap from="/image_raw" to="/front_camera/image_raw"/>
    <remap from="/image_raw/compressed" to="/front_camera/compressed"/>
    <remap from="/image_raw/compressedDepth" to="/front_camera/compressedDepth"/>
    <remap from="/image_raw/theora" to="/front_camera/compressedDepth"/>
    <remap from="/image_raw/zstd" to="/front_camera/zstd"/>

  </node>
</launch>
